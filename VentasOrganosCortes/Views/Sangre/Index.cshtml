@model List<VentasOrganosCortes.Models.ViewModels.ListSangreViewModel>
@{
    ViewBag.Title = "Mis datos";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Tipo de Sangre</th>
                <th>Cantidad</th>
                <th>Infectada</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Tipo</td>
                    <td>@oElemento.Cant</td>
                    <td>@oElemento.Infectada</td>
                    <td>
                        <a class="btn btn-link" href="~/Sangre/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-link" href="~/Sangre/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
        <div class="row" style="text-align:right;padding:5px;">
            <a href="~/Sangre/Nuevo" class="btn btn-primary">Nuevo</a>
        </div>
    </div>
</div>
