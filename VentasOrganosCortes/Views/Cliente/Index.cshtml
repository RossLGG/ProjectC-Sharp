@model List<VentasOrganosCortes.Models.ViewModels.ListClienteViewModel>
@{
    ViewBag.Title = "Mis datos";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nick</th>
                <th>Email</th>
                <th>Clave</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Id</td>
                    <td>@oElemento.Nick</td>
                    <td>@oElemento.Email</td>
                    <td>@oElemento.Clave</td>
                    <td>
                        <a class="btn btn-link" href="~/Cliente/Editar/@oElemento.Id">Editar</a>
                        <a class="btn btn-link" href="~/Cliente/Eliminar/@oElemento.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
        <div class="row" style="text-align:right;padding:5px;">
            <a href="~/Cliente/Nuevo" class="btn btn-primary">Nuevo</a>
        </div>
    </div>
</div>
